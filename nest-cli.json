{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/invoice-catalog/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/invoice-catalog/tsconfig.app.json"
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "invoice-catalog": {
      "type": "application",
      "root": "apps/invoice-catalog",
      "entryFile": "main",
      "sourceRoot": "apps/invoice-catalog/src",
      "compilerOptions": {
        "tsConfigPath": "apps/invoice-catalog/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/invoice-catalog"
}